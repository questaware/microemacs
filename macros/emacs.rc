11 store-macro		; kill line
  !if &equ $lastkey 260
	  beginning-of-line
		1 kill-to-end-of-line
	!else
		!while &equ 1 1
			backward-character
			!if &and &not &equ $curchar 32 &not &equ $curchar 9
				!break
			!endif
			delete-next-character
		!endw
		forward-character
	!endif
!endm

