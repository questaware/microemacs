1 store-macro		; change case one character
  set %ccc $curchar
  !if &gre %ccc 96 
    set $curchar &sub %ccc 32
  !else
    !if &and &gre %ccc 64 &les %ccc 91
        set $curchar &add %ccc 32
      !endif
    !endif
  !endif
  forward-character
!endm    

btk execute-macro-1 

2 store-macro		; end buffer
 	!if &equ $lastkey 47
	  save-file
  !endif

	set %wd $winnew
	set %wk $work
  set %mybuf $cbufname
  set $status 0
	!force drop-buffer %mybuf
	!if &not &seq $status "TRUE"
		select-buffer %mybuf
	!else
		!if &equ $work %wk
  		!force exit-emacs
	  !endif
	!endif
	!if &or &equ $work 1 &equ %wd 1
		set $discmd &sub $discmd 1
		!force delete-window
		set $discmd &add $discmd 1
	!endif
!endm

