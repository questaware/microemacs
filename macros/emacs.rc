4 store-macro		; new file
  set %fle @&cat &cat "new file [" $cfname "]: "
  !if &equ 0 &length %fle
     set %ln $curline
     read-file $cfname
     goto-line %ln
  !else
     set %bnm $cbufname
     find-file %fle
     !if &not &seq %bnm $cbufname
       drop-buffer %bnm
     !endif
  !endif
!endm

